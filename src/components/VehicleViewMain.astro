---
import { actions } from "astro:actions";
import CarDummy from "../assets/carDummy.webp";
import { Image } from "astro:assets";
import { transformMultiBarToPSI } from "@utils/barToPsi";

const { data, error } = await Astro.callAction(actions.getVehicles.getAll, {});

if (!data || error) throw new Error("ffs");
---

<div class="flex flex-col col-span-3 mx-2 gap-4">
	<p>vehicles</p>
	<div class="flex gap-2 mx-4 items-center">
		<input
			type="search"
			class="border py-2 px-4 bg-transparent rounded-lg"
			placeholder="search..."
		/>
		<p>
			{data.length} results
		</p>

		<div class="ml-auto flex items-center gap-2">
			<svg
				width="15"
				height="15"
				viewBox="0 0 15 15"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
				><path
					d="M7.50005 1.04999C7.74858 1.04999 7.95005 1.25146 7.95005 1.49999V8.41359L10.1819 6.18179C10.3576 6.00605 10.6425 6.00605 10.8182 6.18179C10.994 6.35753 10.994 6.64245 10.8182 6.81819L7.81825 9.81819C7.64251 9.99392 7.35759 9.99392 7.18185 9.81819L4.18185 6.81819C4.00611 6.64245 4.00611 6.35753 4.18185 6.18179C4.35759 6.00605 4.64251 6.00605 4.81825 6.18179L7.05005 8.41359V1.49999C7.05005 1.25146 7.25152 1.04999 7.50005 1.04999ZM2.5 10C2.77614 10 3 10.2239 3 10.5V12C3 12.5539 3.44565 13 3.99635 13H11.0012C11.5529 13 12 12.5528 12 12V10.5C12 10.2239 12.2239 10 12.5 10C12.7761 10 13 10.2239 13 10.5V12C13 13.1041 12.1062 14 11.0012 14H3.99635C2.89019 14 2 13.103 2 12V10.5C2 10.2239 2.22386 10 2.5 10Z"
					fill="currentColor"
					fill-rule="evenodd"
					clip-rule="evenodd"></path></svg
			>
			<button> CSV </button>
		</div>
	</div>
	<table class="table-fixed overflow-auto">
		<thead>
			<tr>
				<th> Name </th>
				<th> SOC </th>
				<th> Security </th>
				<th> Alerts </th>
				<th> Last Seen </th>
				<th> Location </th>
				<th> Tires </th>
			</tr>
			<tbody class="">
				{
					data.map((x) => {
						const tirePressures = x.tires
							? {
									fl: x
										.tires
										.front_left_pressure,
									fr: x
										.tires
										.front_right_pressure,
									bl: x
										.tires
										.rear_left_pressure,
									br: x
										.tires
										.rear_right_pressure,
								}
							: undefined;

						if (!tirePressures) return;

						const tirePressureAvg =
							transformMultiBarToPSI(
								Object.values(
									tirePressures,
								),
							);

						return (
							<tr>
								{/*
								 * image / name / vin
								 */}
								<td class="py-2">
									<a
										href={`/vehicles/${x.VIN}`}
										class="flex gap-2 "
									>
										<Image
											src={
												CarDummy
											}
											alt="carDUmmy"
											height={
												50
											}
											width={
												100
											}
										/>
										<div class="flex flex-col ">
											<p class="font-bold">
												{
													x.name
												}
											</p>
											<p class="font-thin">
												{
													x.VIN
												}
											</p>
										</div>
									</a>
								</td>
								{/*
								 * range percent / miles
								 */}
								<td class="text-end">
									<a
										href={`/vehicles/${x.VIN}`}
										class="flex flex-col"
									>
										<p class="after:content-['%']">
											{x?.range_decimal
												? Math.round(
														x?.range_decimal *
															100,
													)
												: null}
										</p>
										<p class="after:content-['%']">
											{x?.range_decimal
												? Math.round(
														x?.range_decimal *
															100,
													)
												: null}
										</p>
									</a>
								</td>
								{/*
								 * security
								 */}
								<td class="text-end">
									<a
										href={`/vehicles/${x.VIN}`}
										class=""
									>
										{
											x?.mobile_access_date
										}
									</a>
								</td>
								{/*
								 * Alerts
								 */}
								<td class="text-end">
									<a
										href={`/vehicles/${x.VIN}`}
										class=""
									>
										{
											x?.mobile_access_date
										}
									</a>
								</td>
								{/*
								 * Last seen
								 */}
								<td class="text-end">
									<a
										href={`/vehicles/${x.VIN}`}
										class=""
									>
										{
											x?.mobile_access_date
										}
									</a>
								</td>
								{/*
								 * Location
								 */}
								<td class="text-end">
									<a
										href={`/vehicles/${x.VIN}`}
										class=""
									>
										{
											x?.mobile_access_date
										}
									</a>
								</td>
								{/*
								 * Tires
								 */}
								<td class="text-end">
									<a
										href={`/vehicles/${x.VIN}`}
										class=""
									>
										{
											tirePressureAvg
										}
									</a>
								</td>
							</tr>
						);
					})
				}
			</tbody>
		</thead>
	</table>
</div>
